<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/")
    @RenderSection("scripts", required: false)
    <link href="~/Content/footer.css" rel="stylesheet">
</head>
<body>
    <div id="wrap">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @if (Request.IsAuthenticated)
                    {
                        @Html.ActionLink("Music WAVE", MVC.UserProfile.User.Index(), new { @class = "navbar-brand" })
                    }
                    else
                    {
                        @Html.ActionLink("Music WAVE", MVC.Home.Index(), new { @class = "navbar-brand" })
                    }
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @if (Request.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Home", MVC.UserProfile.User.Index(), new { area = "UserProfile" }, null)</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Home", MVC.Home.Index())</li>
                        }
                        <li>@Html.ActionLink("About", MVC.Home.About())</li>
                        <li>@Html.ActionLink("Contact", MVC.Home.Contact())</li>
                    </ul>

                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
        </div>
    </div>
    <div id="footer">
        <div class="container">
            <p class=" credit" style="color: #030303">Develoer - Valeriy Pogorzhelskiy</p>
        </div>
    </div>
</body>
</html>
